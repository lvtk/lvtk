@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix ui:    <http://lv2plug.in/ns/extensions/ui#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .
@prefix lvtk:  <http://lvtoolkit.org/ns/lvtk#> .

<http://lvtoolkit.org/plugins/volume>
	a lv2:Plugin , 
		lv2:AmplifierPlugin ;
	doap:name "Volume" ;
	doap:license <https://opensource.org/licenses/ISC> ;
	lv2:project <http://lvtoolkit.org/ns/lvtk> ;
	lv2:minorVersion 0 ;
	lv2:microVersion 0 ;
	lv2:optionalFeature lv2:hardRTCapable ;
	ui:ui <http://lvtoolkit.org/plugins/volume#ui> ;
	lv2:port [
		a lv2:AudioPort, lv2:InputPort ;
		lv2:index 0 ;
		lv2:symbol "input_1" ;
		lv2:name "In 1"
	] , [
		a lv2:AudioPort, lv2:InputPort ;
		lv2:index 1 ;
		lv2:symbol "input_2" ;
		lv2:name "In 2"
	] , [
		a lv2:AudioPort, lv2:OutputPort ;
		lv2:index 2 ;
		lv2:symbol "output_1" ;
		lv2:name "Out 1"
	] , [
		a lv2:AudioPort, lv2:OutputPort ;
		lv2:index 3 ;
		lv2:symbol "output_2" ;
		lv2:name "Out 2"
	] , [
		a lv2:ControlPort , lv2:InputPort ;
		lv2:index 4 ;
		lv2:symbol "volume" ;
		lv2:name "Volume" ;
		lv2:minimum -90.0 ;
		lv2:maximum 24.0 ;
		lv2:default 0.0 ;
		units:unit units:db ;
		lv2:scalePoint [
			rdfs:label "+5" ;
			rdf:value 5.0
		] , [
			rdfs:label "0" ;
			rdf:value 0.0
		] , [
			rdfs:label "-5" ;
			rdf:value -5.0
		] , [
			rdfs:label "-10" ;
			rdf:value -10.0
		] ;
	] .

<http://lvtoolkit.org/plugins/volume#ui>
	a lvtk:JUCEUI ;
	lv2:extensionData ui:resize ;
	lv2:optionalFeature ui:resize, ui:touch, ui:idle, ui:show ;
	doap:license <https://opensource.org/licenses/GPL-3.0> .
